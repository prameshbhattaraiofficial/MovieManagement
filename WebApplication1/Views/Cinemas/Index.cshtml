@model List<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th> @Html.DisplayNameFor(Model => Model.First().CinemaLogo)</th>

                    <th> @Html.DisplayNameFor(Model => Model.First().Name)</th>

                    <th> @Html.DisplayNameFor(Model => Model.First().Description)</th>

                    <th> Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src=@item.CinemaLogo style="max-width: 150px;" />
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(ModelItem => item.Name)

                        </td>
                        <td>
                            @Html.DisplayFor(ModelItem => item.Description)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-primary"> <i class="bi bi-pencil-square" />Edit </a>
                            <a class="btn btn-primary"><i class="bi bi-eye" />Details </a>
                            <a class="btn btn-primary"> <i class="bi bi-trash" />Delete</a>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
